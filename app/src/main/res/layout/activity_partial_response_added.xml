<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/main_padding"
    tools:context=".features.response.subfeatures.partialresponseadded.PartialResponseAddedActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="392dp"
        android:layout_height="380dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="added_partial_resp.json"
        app:lottie_loop="true" />


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp12"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/partial_response_added"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textAppearanceH5"/>

    <TextView
        android:id="@+id/tvDescription"
        style="@style/TextAppearance.Body1.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/mregular"
        android:text="@string/you_have_successfully_added_partial_responsibility"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnViewResponseCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp6"
        android:layout_marginTop="@dimen/dp62"
        android:layout_marginEnd="@dimen/dp6"
        android:padding="@dimen/dp6"
        android:background="@drawable/bg_circle_color_accent"
        android:text="@string/view_request"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textAppearanceSubtitle1"
        android:textStyle="bold" />



    <Button
        android:id="@+id/btnAddAnotherResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp6"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp6"
        android:layout_marginBottom="@dimen/dp12"
        android:background="@drawable/bg_rounded_blue"
        android:text="@string/add_another_response"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textAppearanceSubtitle1"
        android:textStyle="bold" />

</LinearLayout>