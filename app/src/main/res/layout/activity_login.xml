<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.login.view.LoginActivity"
    android:background="@drawable/gradient_login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/margin_vertical_login"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_login"
        android:layout_marginEnd="@dimen/margin_horizontal_login"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_input_login"
        android:hint="@string/nik"
        android:inputType="numberSigned"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_person"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toTopOf="@id/viewPassword"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/viewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_login"
        android:layout_marginEnd="@dimen/margin_horizontal_login"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false">
        <EditText
            android:id="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_login"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_password"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_login"
        android:layout_marginEnd="@dimen/margin_horizontal_login"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:textSize="@dimen/font_login"
        android:text="@string/login"
        android:textColor="@color/white"
        android:elevation="5dp"
        android:background="@drawable/bg_button_login"
        app:layout_constraintBottom_toTopOf="@id/tvSignUp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_login"
        android:layout_marginEnd="@dimen/margin_horizontal_login"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/margin_vertical_login"
        android:textAlignment="center"
        android:textSize="@dimen/font_login"
        android:text="@string/hint_to_sign_up"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>