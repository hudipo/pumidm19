<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_top_blue"
    tools:context=".features.requestpum.view.SentReqActivity">

    <LinearLayout
        android:padding="@dimen/dp12"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="24dp"
            android:src="@drawable/paper_plane"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dp12"
            android:text="Request Sent!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="@dimen/dp6"
            android:layout_marginEnd="@dimen/dp6"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="You have successfully created PUM Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/bg_rounded_green_12dp"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="View Request"
            android:layout_width="300dp"
            android:layout_marginTop="36dp"
            android:layout_height="50dp"/>

        <Button
            android:background="@drawable/bg_rounded_white_12dp"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:textColor="@color/btn_home_text"
            android:text="Back to Home"
            android:layout_width="300dp"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>