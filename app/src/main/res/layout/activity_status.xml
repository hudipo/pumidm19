<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshStatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".features.status.StatusActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <View
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightAppBar"
                android:background="@drawable/gradient_top_blue"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/left_arrow"
                android:layout_marginStart="@dimen/main_margin"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/topView"
                app:layout_constraintTop_toTopOf="@id/topView"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textStyle="bold"
                style="@style/TextAppearance.Headline4.Light"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="@id/topView"
                app:layout_constraintStart_toStartOf="@id/topView"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <EditText
                android:id="@+id/etSearchByPumNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_white_30dp"
                android:hint="@string/search_by_pum_number"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="@dimen/main_margin"
                android:layout_marginEnd="@dimen/main_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintBottom_toBottomOf="@id/topView"
                app:layout_constraintEnd_toStartOf="@id/btnSearchStatus"/>

            <ImageButton
                android:id="@+id/btnSearchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_blue_24dp"
                android:background="@drawable/bg_rounded_white_30dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/etSearchByPumNumber"
                app:layout_constraintBottom_toBottomOf="@id/etSearchByPumNumber"
                app:layout_constraintEnd_toStartOf="@id/btnFilterStatus"
                app:layout_constraintStart_toEndOf="@id/etSearchByPumNumber"/>

            <ImageButton
                android:id="@+id/btnFilterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter_blue_24dp"
                android:background="@drawable/bg_rounded_white_30dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginEnd="@dimen/main_margin"
                app:layout_constraintTop_toTopOf="@id/btnSearchStatus"
                app:layout_constraintBottom_toBottomOf="@id/btnSearchStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnSearchStatus"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_adapter_status"
                android:padding="@dimen/main_padding"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>