<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="@dimen/dp6"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_margin"
    android:layout_marginTop="@dimen/main_margin"
    android:background="@drawable/bg_rounded_border_black_solid_black">

    <TextView
        android:text="Doc Num"
        android:fontFamily="@font/mbold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDocNum"
        android:textSize="@dimen/textAppearanceSubtitle"
        android:text="200100300/100/2019"
        android:fontFamily="@font/mregular"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_marginStart="@dimen/dp6"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/doc_date"
        android:fontFamily="@font/mbold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDocDate"
        android:textSize="@dimen/textAppearanceSubtitle"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:text="19/08/2019"
        android:fontFamily="@font/mregular"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_marginStart="@dimen/dp6"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/amount"
        android:fontFamily="@font/mbold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAmount"
        android:textSize="@dimen/textAppearanceSubtitle"
        android:text="Rp 40.000.000"
        android:fontFamily="@font/mregular"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dp6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>