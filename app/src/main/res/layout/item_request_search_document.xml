<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp18"
    android:layout_marginTop="18dp"
    android:background="@drawable/bg_rounded_border_black_solid_black">

    <TextView
        android:text="Doc Num"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDocNum"
        android:textSize="24sp"
        android:text="200100300/100/2019"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Doc Date"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDocDate"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:text="19/08/2019"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Amaount"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAmount"
        android:textSize="24sp"
        android:text="Rp 40.000.000"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>