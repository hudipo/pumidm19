<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.approval.activity.ApprovalDetailActivity">
    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightAppBar"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@drawable/gradient_top_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/left_arrow"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/title_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:gravity="center"
                android:text="@string/approval"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="@string/filter"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/main_padding">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trx_start_date"
                style="@style/TextAppearance.AppCompat.Title"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivTrxStartDate"
                style="@style/TextAppearance.Body1.Dark"
                android:id="@+id/tvTrxStartDate"
                android:background="@drawable/bg_rounded_border_black_solid_black"
                android:layout_width="0dp"
                android:layout_height="@dimen/editTextHeight"
                android:paddingStart="@dimen/main_padding"
                android:paddingEnd="@dimen/main_padding"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/main_margin"/>
            <ImageView
                android:id="@+id/ivTrxStartDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTrxStartDate"
                app:layout_constraintBottom_toBottomOf="@id/tvTrxStartDate"
                android:layout_width="@dimen/editTextHeight"
                android:layout_height="@dimen/editTextHeight"
                android:src="@drawable/calendar"
                android:padding="@dimen/min_margin"
                android:background="@drawable/bg_rounded_border_black_solid_green"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/tvTrxStartDate"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_margin"
                android:text="@string/trx_until_date"
                style="@style/TextAppearance.AppCompat.Title"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivTrxUntilDate"
                style="@style/TextAppearance.Body1.Dark"
                android:id="@+id/tvTrxUntilDate"
                android:background="@drawable/bg_rounded_border_black_solid_black"
                android:layout_width="0dp"
                android:layout_height="@dimen/editTextHeight"
                android:paddingStart="@dimen/main_padding"
                android:paddingEnd="@dimen/main_padding"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/main_margin"/>
            <ImageView
                android:id="@+id/ivTrxUntilDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTrxUntilDate"
                app:layout_constraintBottom_toBottomOf="@id/tvTrxUntilDate"
                android:layout_width="@dimen/editTextHeight"
                android:layout_height="@dimen/editTextHeight"
                android:src="@drawable/calendar"
                android:padding="@dimen/min_margin"
                android:background="@drawable/bg_rounded_border_black_solid_red"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/tvTrxUntilDate"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_margin"
                android:text="@string/trx_status"
                style="@style/TextAppearance.AppCompat.Title"/>
            <Spinner
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/TextAppearance.Body1.Dark"
                android:id="@+id/spTrxStatus"
                android:background="@drawable/bg_rounded_border_black_solid_black"
                android:layout_width="0dp"
                android:layout_height="@dimen/editTextHeight"
                android:paddingStart="@dimen/main_padding"
                android:paddingEnd="@dimen/main_padding"
                android:gravity="center_vertical"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/spTrxStatus"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/main_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/redError"
                android:text="@string/note"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvNote"
                style="@style/TextAppearance.Body1"
                android:textColor="@color/redError"
                android:text="@string/note_approval_filter"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="@dimen/buttonWidth"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="@drawable/bg_rounded_blue_30dp"
                style="@style/TextAppearance.Headline6.Light"
                android:textAllCaps="false"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNote"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>