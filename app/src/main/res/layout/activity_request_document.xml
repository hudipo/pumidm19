<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.requestpum.activity.DocumentReqActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightAppBar"
        android:background="@drawable/gradient_top_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/topView"
        app:layout_constraintEnd_toStartOf="@id/activityTitle"
        app:layout_constraintStart_toStartOf="@id/topView"
        app:layout_constraintTop_toTopOf="@id/topView" />

    <TextView
        android:id="@+id/activityTitle"
        style="@style/TextAppearance.Headline4.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/request"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/topView"
        app:layout_constraintEnd_toEndOf="@id/topView"
        app:layout_constraintStart_toStartOf="@id/topView"
        app:layout_constraintTop_toTopOf="@id/topView" />

    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin"
        android:text="Document"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/topView" />

    <Spinner
        android:id="@+id/spnDocType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/main_margin"
        android:layout_marginTop="@dimen/main_margin"
        android:popupBackground="@drawable/bg_rounded_border_black_solid_black"
        android:layout_marginEnd="@dimen/main_margin"
        android:background="@drawable/bg_rounded_border_black_solid_black"
        android:drawableEnd="@drawable/ic_arrow_drop_down_black_30dp"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="42dp"
        app:layout_constraintTop_toBottomOf="@id/sectionTitle" />

    <ImageView
        android:src="@drawable/ic_arrow_drop_down_black_30dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/spnDocType"
        app:layout_constraintBottom_toBottomOf="@id/spnDocType"
        app:layout_constraintEnd_toEndOf="@id/spnDocType"
        android:layout_marginEnd="@dimen/dp12"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDocNum"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/main_margin"
        android:background="@drawable/bg_rounded_border_black_solid_black"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="DOC Number"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/imgSearcDoc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spnDocType" />

    <ImageButton
        android:id="@+id/imgSearcDoc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/main_margin"
        android:background="@drawable/bg_rounded_red"
        android:padding="6dp"
        android:src="@drawable/ic_search_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spnDocType" />

    <Button
        android:id="@+id/btnNextDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_margin"
        android:background="@drawable/bg_circle_color_accent"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>