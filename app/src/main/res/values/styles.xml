<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EditText.Login" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ErrorAppearanceLogin" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/redError</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogFragment" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TextAppearance Style-->
    <style name="TextAppearance"/>

    <!-- TextAppearance Style Headline4-->

    <style name="TextAppearance.Headline4">
        <item name="android:textSize">@dimen/textAppearanceH4</item>
    </style>

    <style name="TextAppearance.Headline4.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Headline4.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Headline4.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style Headline5-->

    <style name="TextAppearance.Headline5">
        <item name="android:textSize">@dimen/textAppearanceH5</item>
    </style>

    <style name="TextAppearance.Headline5.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Headline5.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Headline5.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style Headline6-->

    <style name="TextAppearance.Headline6">
        <item name="android:textSize">@dimen/textAppearanceH6</item>
    </style>

    <style name="TextAppearance.Headline6.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Headline6.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Headline6.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style Subtitle1-->

    <style name="TextAppearance.Subtitle1">
        <item name="android:textSize">@dimen/textAppearanceSubtitle1</item>
    </style>

    <style name="TextAppearance.Subtitle1.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Subtitle1.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Subtitle1.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style Subtitle2-->

    <style name="TextAppearance.Subtitle2">
        <item name="android:textSize">@dimen/textAppearanceSubtitle2</item>
    </style>

    <style name="TextAppearance.Subtitle2.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Subtitle2.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Subtitle2.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style Body1-->

    <style name="TextAppearance.Body1">
        <item name="android:textSize">@dimen/textAppearanceBody1</item>
    </style>

    <style name="TextAppearance.Body1.Dark">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="TextAppearance.Body1.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Body1.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style Body2-->

    <style name="TextAppearance.Body2">
        <item name="android:textSize">@dimen/textAppearanceBody2</item>
    </style>

    <style name="TextAppearance.Body2.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Body2.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Body2.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TextAppearance Style caption-->

    <style name="TextAppearance.caption">
        <item name="android:textSize">@dimen/textAppearanceCaption</item>
    </style>

    <style name="TextAppearance.caption.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.caption.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.caption.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Custom Keyboard Styles-->
    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:divider">@drawable/keyboard_divider</item>-->
        <item name="android:gravity">center</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <style name="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="keyboard_number_button" parent="keyboard_button">
        <item name="android:tag">number_button</item>
    </style>

    <!-- Spinner -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"/>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"/>

    <!-- Dialog -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>
</resources>
